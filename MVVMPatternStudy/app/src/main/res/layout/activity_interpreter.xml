<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:interpreterContext=".View.InterpreterActivity"
    android:padding="5dp">

    <EditText
        android:id="@+id/editInterpreterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/re_InterpreterResult"
        android:layout_width="500dp"
        android:layout_height="555dp"
        android:background="@drawable/shape"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/editInterpreterText" />

    <LinearLayout
        android:id="@+id/linear_command"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:gravity="right"
        android:orientation="vertical"
        android:background="@drawable/shape"
        app:layout_constraintLeft_toRightOf="@+id/re_InterpreterResult"
        app:layout_constraintTop_toBottomOf="@+id/editInterpreterText">

        <Button
            android:id="@+id/btn_interpreter_go"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:text="Go" />

        <Button
            android:id="@+id/btn_interpreter_left"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:text="Left" />

        <Button
            android:id="@+id/btn_interpreter_right"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:text="Right" />

        <Button
            android:id="@+id/btn_interpreter_repeat"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:text="Repeat" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_repeatCnt"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="1" />

            <Button
                android:id="@+id/btn_interpreter_confirm"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Confirm" />
        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tx_InterpreterResult"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape"
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_InterpreterResult"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>