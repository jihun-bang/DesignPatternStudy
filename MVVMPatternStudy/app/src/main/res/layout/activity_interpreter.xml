<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.InterpreterActivity">

    <EditText
        android:id="@+id/editInterpreterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/textInterpreterResult"
        android:layout_width="1034dp"
        android:layout_height="586dp"
        android:ems="10"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="59dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/shape"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1072dp"
        tools:layout_editor_absoluteY="59dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_interpreter_go"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:text="Go" />

        <Button
            android:id="@+id/btn_interpreter_left"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:text="Left" />

        <Button
            android:id="@+id/btn_interpreter_right"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:text="Right" />

        <Button
            android:id="@+id/btn_interpreter_repeat"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:text="Repeat" />

        <EditText
            android:id="@+id/edit_repeatCnt"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="1"/>
    </LinearLayout>




</android.support.constraint.ConstraintLayout>